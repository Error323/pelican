        <!-- <source coordType="azel" coord1="68"   coord2="40" ampType="polxy" amp1="100"  amp2="50"/> -->
        <channels>182</channels>
        <frequencies reference="0.0" referenceChannel="0" delta="195312.5"/>
        <!-- <frequencies reference="3.554687500e7" referenceChannel="0" delta="195312.5"/>  -->
        <polarisation value="x"/>
    </ZenithModelVisibilities>


    <ZenithImagerDft>
        <size l="1024" m="1024" pixelCentred="true"/>
        <fullSky value="true" cutHemisphere="true"/>
        <polarisation value="x"/>
        <pointSpreadFunction value="false"/>
        <channels>182</channels>
        <frequencies reference="0.0" referenceChannel="0" delta="195312.5"/>
        <!-- <frequencies reference="3.554687500e7" referenceChannel="0" delta="195312.5"/>  -->
        <useModelVis value="false"/>
        <useRawVis value="false"/>
    </ZenithImagerDft>


    <ImageWriterFits>
        <overwrite value="true"/>
        <directory value=""/>
        <file name="test.fits" prefix="" suffix=""/>

        <!-- <cube value="true"/> -->
        <origin value="Oxford e-Research Centre"/>
        <telescope value="LOFAR"/>
        <instrument value="Effelsberg"/>
        <observer value=""/>
        <object value="full sky"/>
        <author value=""/>
        <reference value=""/>
