        <source coordType="azel" coord1="9.670555556" coord2="80.37166667"  amp1="11000"  amp2="0.5"/>
        <source coordType="azel" coord1="268.031111" coord2="56.174444" amp1="8100"  amp2="0.5"/>
        
        <!-- <source coordType="azel" coord1="0"   coord2="80" ampType="polxy" amp1="1000"  amp2="200"/>
